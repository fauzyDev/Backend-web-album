generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  
  password  String
}

model File {
  id          Int      @id @default(autoincrement())
  filename    String
  url         String   @unique
  size        Int
  mimetype    String
  createdAt   DateTime @default(now())
}
